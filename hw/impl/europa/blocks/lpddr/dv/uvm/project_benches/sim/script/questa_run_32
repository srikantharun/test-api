TOP_DIR_NAME=$(pwd)/../uvmf
export TOP_DIR_NAME

echo "Setting up work directory"
vlib work

vlog -f top_test_filelist.f \
    ../uvmf/hdl_top.sv \
    ../uvmf/hvl_top.sv 
echo "Optimisation step"
vopt -o top_opt hdl_top hvl_top -debug -designfile design.bin

echo "Running test"
vsim -c -mvchome ${QUESTA_MVC_HOME} top_opt +nowarnTSCALE -t 1ps -do "run -all; quit" +UVM_TESTNAME=top_test_base +SEQ=top_example_vseq -qwavedb=+signal+transaction+class+uvm_schematic
