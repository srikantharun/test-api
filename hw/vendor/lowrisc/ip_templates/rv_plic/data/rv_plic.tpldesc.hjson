{
  template_param_list: [
    {
      name: "topname"
      desc: "Name of top-level design, e.g., 'darjeeling' or 'earlgrey'"
      type: "string"
      default: ""
    }
    {
      name: "src"
      desc: "Number of interrupt sources"
      type: "int"
      default: "32"
    }
    {
      name: "target"
      desc: "Number of interrupt targets"
      type: "int"
      default: "1"
    }
    {
      name: "prio"
      desc: "Max value of interrupt priorities"
      type: "int"
      default: "7"
    }
    {
      name: "module_instance_name"
      desc: "instance name in case there are multiple rv_plic instances"
      type: "string"
      default: "rv_plic"
    }
    {
      name: "csr_regwidth"
      desc: "Register width to generate"
      type: "int"
      default: "64"
    }
    {
      name: "csr_bus_protocol"
      desc: "Bus protocol to use for CSR acess, values 'axi', 'apb'"
      type: "string"
      default: "axi"
    }
    {
      name: "axi_addr_width"
      desc: "Address width of the axi csr port if selected"
      type: "int"
      default: "28"
    }
    {
      name: "axi_id_width"
      desc: "ID width of the axi csr port if selected"
      type: "int"
      default: "9"
    }
    {
      name: "axi_len_width"
      desc: "Len width of the axi csr port if selected"
      type: "int"
      default: "8"
    }
  ]
}
