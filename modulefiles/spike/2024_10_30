#%Module1.0####################################################################
##
## Spike modulefile
##
proc ModulesHelp { } {
    global version
    puts stderr "\tSets up environment for Spike version 2024_10_30"
}

#--------------------------------------------------------------------+
#-- Global variables & functions for Tcl script use only ------------|
#--------------------------------------------------------------------+
#
set version       2024_10_30
set ip_home       /apps/tools/riscv/spike
set release_home  $ip_home/$version

#-- what is --#
module-whatis  "Sets up environment for Spike version $version"
module-whatis  "Contains spike reference simulator"
module-whatis  "And fixes to CVA6V CSRs"
module-whatis  "Release located @ $release_home"

#--------------------------------------------------------------------+
#-- Conflicts -------------------------------------------------------|
#
conflict spike

#--------------------------------------------------------------------+
#-- Prerequisites ---------------------------------------------------|
#

#--------------------------------------------------------------------+
#-- Module-related operations ---------------------------------------|
#--------------------------------------------------------------------+
#-- env vars --#
#
setenv        SPIKE_HOME  $release_home
prepend-path  PATH        $release_home/bin
