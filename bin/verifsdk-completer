#!/usr/bin/env bash

# set -e

VENV=.venv/verifsdk-completer

make -C $REPO_ROOT/bin venv VENV=$VENV FILE=$REPO_ROOT/sw/scripts/verifsdk/completion/requirements.txt > /dev/null 2>&1

source $REPO_ROOT/bin/$VENV/bin/activate
$REPO_ROOT/sw/scripts/verifsdk/completion/verifsdk-completer.py $@
deactivate
