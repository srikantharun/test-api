#!/usr/bin/env bash

set -e

VENV=.venv/synth_constraints

make -C $REPO_ROOT/bin venv VENV=$VENV FILE=$REPO_ROOT/hw/scripts/synth_constraints/requirements.txt > /dev/null 2>&1

source $REPO_ROOT/bin/$VENV/bin/activate
python3.10 $REPO_ROOT/hw/scripts/synth_constraints/synth_constraints/cli.py $@
deactivate
