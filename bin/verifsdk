#!/usr/bin/env bash

set -e

VENV=.venv/verifsdk

make -C $REPO_ROOT/bin venv VENV=$VENV FILE=$REPO_ROOT/sw/scripts/verifsdk/requirements.txt > /dev/null 2>&1

source $REPO_ROOT/bin/$VENV/bin/activate
$REPO_ROOT/sw/scripts/verifsdk/verifsdk.py $@
deactivate

# When running in parallel the terminal can get confused
if [ -t 0 ] ; then
  stty sane
fi
