#!/usr/bin/env bash

set -e

VENV=.venv/vtrsp_data_gen

make -C $REPO_ROOT/bin venv VENV=$VENV FILE=$REPO_ROOT/hw/ip/aic_ls/default/dv/uvm/refmodels/dmc_addr_gen_ref_model/requirements.txt > /dev/null 2>&1

source $REPO_ROOT/bin/$VENV/bin/activate
$REPO_ROOT/hw/ip/aic_ls/default/dv/uvm/refmodels/dmc_addr_gen_ref_model/vtrsp_data_gen.py $@
deactivate
