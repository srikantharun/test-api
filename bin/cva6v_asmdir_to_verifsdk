#!/usr/bin/env bash

set -e

VENV=.venv/cva6_tb_tools

make -C $REPO_ROOT/bin venv VENV=$VENV FILE=$REPO_ROOT/hw/vendor/axelera/cva6v/default/dv/scripts/requirements.txt > /dev/null 2>&1

source $REPO_ROOT/bin/$VENV/bin/activate
python3 $REPO_ROOT/hw/vendor/axelera/cva6v/default/dv/scripts/cva6v_asmdir_to_verifsdk/cva6v_asmdir_to_verifsdk.py $@
deactivate
